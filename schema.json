
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "遥控车插件 Schema",
  "description": "用于验证遥控车应用程序中插件配置的 JSON Schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to the schema file"
    },
    "plugins": {
      "type": "array",
      "description": "List of plugins available in the application",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "Unique identifier for the plugin"
          },
          "name": {
            "type": "string",
            "description": "Display name of the plugin"
          },
          "description": {
            "type": "string",
            "description": "Description of the plugin's functionality"
          },
          "icon": {
            "type": "string",
            "description": "Icon identifier for the plugin"
          },
          "preview": {
            "type": "string",
            "description": "Preview image URL for the plugin"
          },
          "isFull": {
            "type": "boolean",
            "description": "Whether the plugin is full screen"
          },
          "noIcon": {
            "type": "boolean",
            "description": "Whether the plugin has no icon"
          }
        },
        "required": ["code", "name"],
        "additionalProperties": true
      }
    }
  },
  "required": ["plugins"]
}