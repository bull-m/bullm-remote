{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "内置插件 Schema",
  "description": "用于验证内置插件配置的 JSON Schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "指向 schema 文件的引用"
    },
    "plugins": {
      "type": "array",
      "description": "应用程序中可用的插件列表",
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "description": "插件的唯一标识符"
          },
          "name": {
            "type": "string",
            "description": "插件的显示名称"
          },
          "description": {
            "type": "string",
            "description": "插件功能的描述"
          },
          "btnIcon": {
            "type": "string",
            "description": "插件按钮的图标标识符"
          },
          "preview": {
            "type": "string",
            "description": "插件的预览图像 URL"
          },
          "category": {
            "type": "string",
            "description": "类别"
          }
        },
        "required": ["source", "name"],
        "additionalProperties": true
      }
    }
  },
  "required": ["plugins"]
}
