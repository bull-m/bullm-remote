# 自动规范化行尾符
* text=auto

# 明确指定特定文件类型的行尾符
*.ts text eol=lf
*.js text eol=lf
*.vue text eol=lf
*.json text eol=lf
*.md text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.rs text eol=lf
*.toml text eol=lf

# Windows 脚本文件使用 CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# 二进制文件
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
